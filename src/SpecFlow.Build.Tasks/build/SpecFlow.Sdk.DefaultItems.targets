<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <!-- This ensures that msbuild will rebuild this project if the props/targets file changes -->
    <MSBuildAllProjects>$(MSBuildAllProjects);$(MSBuildThisFileFullPath)</MSBuildAllProjects>
  </PropertyGroup>

  <ItemGroup>
    <AvailableItemName Include="SpecFlowFeatureFile" />
  </ItemGroup>

  <ItemGroup Condition=" '$(EnableDefaultSpecFlowItems)' == 'true' ">
    <Compile Remove="**/*$(DefaultSpecFlowGeneratedFeatureExtension)" />
    <SpecFlowFeatureFile Include="**/*$(DefaultSpecFlowFeatureExtension)" Exclude="$(DefaultItemExcludes);$(DefaultExcludesInProjectFolder)" />

    <!-- This enabled the project to be incrementally built -->
    <UpToDateCheckInput Include="@(SpecFlowFeatureFile)" />
    <UpToDateCheckOutput Include="@(SpecFlowFeatureFile->'$(SpecFlowIntermediateOutputPath)%(RecursiveDir)%(Filename)$(DefaultSpecFlowGeneratedFeatureExtension)')" />
  </ItemGroup>

</Project>
